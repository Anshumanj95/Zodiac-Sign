<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputFragment">

    <fragment
        android:id="@+id/inputFragment"
        android:name="com.example.astrosign.InputFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_input">
        <action
            android:id="@+id/action_inputFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_inputFragment_to_resultFragment2"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.astrosign.ResultFragment"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="date"
            app:argType="integer"
            android:defaultValue="25" />
        <argument
            android:name="month"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
</navigation>